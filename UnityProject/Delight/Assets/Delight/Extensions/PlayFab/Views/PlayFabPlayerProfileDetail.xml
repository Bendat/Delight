<PlayFabPlayerProfileDetail xmlns="Delight" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="Delight ../Delight.xsd" BasedOn="UIView"
                            Module="PlayFab">

  <Group IsVisible="{@PlayFabUser.IsLoggedIn}" Spacing="5" Alignment="TopLeft" Margin="10">
    <Label Text="Logged in player" AutoSize="True" FontSize="30" FontColor="White" Font="Segoe UI SDF" Alignment="Left" />
    <Grid Rows="30,30,*" Columns="200[20],320[20]" Width="520" Height="64" RowSpacing="2" Alignment="Left">
      <Label Grid.Cell="0,0" Text="Id" AutoSize="True" FontStyle="Bold" Offset="0,0,0,0" FontColor="White" Font="Segoe UI SDF" />
      <Label Grid.Cell="0,1" Width="100%" Text="{@PlayFabUser.PlayerProfile.Id}" FontColor="White" Font="Segoe UI SDF" />

      <Label Grid.Cell="1,0" Text="DisplayName" AutoSize="True" FontStyle="Bold" FontColor="White" Font="Segoe UI SDF" Offset="0,0,0,0" />
      <InputField Grid.Cell="1,1" Width="100%" Text="{@PlayFabUser.PlayerProfile.DisplayName}" SetValueOnEndEdit="True" />
      
      <Group Grid.Cell="2,0">
        <Label Text="Friends" AutoSize="True" FontSize="24" FontColor="White" Font="Segoe UI SDF" Alignment="Left" />
        <List Items="{friend in @PlayFabUser.Friends}" CanSelect="False"
              BackgroundColor="Clear" Spacing="10" Alignment="Left">
          <ListItem Size="400,64" Highlighted-BackgroundColor="Clear" Selected-BackgroundColor="Clear">

            <Grid Rows="30,30" Columns="200[20],320[20]" Width="520" Height="64" RowSpacing="2" Alignment="Left">
              <Label Grid.Cell="0,0" Text="Id" AutoSize="True" FontStyle="Bold" Offset="0,0,0,0" FontColor="White" Font="Segoe UI SDF" />
              <Label Grid.Cell="0,1" Width="100%" Text="{friend.Id}" FontColor="White" Font="Segoe UI SDF" />

              <Label Grid.Cell="1,0" Text="DisplayName" AutoSize="True" FontStyle="Bold" FontColor="White" Font="Segoe UI SDF" Offset="0,0,0,0" />
              <Label Grid.Cell="1,1" Width="100%" Text="{friend.DisplayName}" FontColor="White" Font="Segoe UI SDF" />
            </Grid>

          </ListItem>
        </List>
        <Group Orientation="Horizontal" Alignment="Left" Spacing="5">
          <Button Text="Add Friend" Click="AddFriend" />
          <Button Text="Remove Friend" Click="RemoveFriend" /> 
        </Group>
      </Group>
    </Grid>
  </Group>
  <Region IsActive="{!@PlayFabUser.IsLoggedIn}">
    <Label Text="Player must be logged in to see this view" AutoSize="True" FontStyle="Bold" Offset="0,0,0,0" FontColor="White" Font="Segoe UI SDF" />
  </Region>

</PlayFabPlayerProfileDetail>
