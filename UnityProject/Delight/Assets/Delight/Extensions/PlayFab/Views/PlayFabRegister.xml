<PlayFabRegister xmlns="Delight" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="Delight ../Delight.xsd" BasedOn="UIView"
                 Module="PlayFab">

  <Grid Columns="1*,1*">

    <!-- Register view -->
    <Region Grid.Cell="0,0" Margin="10">
      <Group Spacing="5" Alignment="TopLeft">
        <Label Text="Register" AutoSize="True" FontSize="30" FontColor="White" Font="Segoe UI SDF" Alignment="Left" />
        <Label Text="Email" AutoSize="True" FontSize="14" FontColor="White" Font="Segoe UI SDF" Alignment="Left" />
        <InputField Text="{@PlayFabRegistrationForm.Email}" Alignment="Left" />
        <Label Text="Password" AutoSize="True" FontSize="14" FontColor="White" Font="Segoe UI SDF" Alignment="Left" />
        <InputField Text="{@PlayFabRegistrationForm.Password}" InputType="Password" Alignment="Left" />
        <Button Text="Register" Alignment="Left" Click="Register" IsDisabled="{@PlayFabRegistrationForm.IsRegistering}" />
        <Label Text="{@PlayFabRegistrationForm.RegistrationMessage}" IsVisible="{@PlayFabRegistrationForm.ShowRegistrationMessage}" AutoSize="True" FontSize="20" FontColor="White" Font="Segoe UI SDF" />
      </Group>
    </Region>

  </Grid>

</PlayFabRegister>
